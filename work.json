{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "osc99": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}} ‚ö° {{end}}{{.Folder | replace \"~\" \"üèö\" }} @ {{.Host}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "transparent",
          "properties": {
            "prefix": " Ôùä ",
            "style": "agnoster_short",
            "max_depth": 3
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#00C853",
          "background": "transparent",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "properties": {
            "prefix": "\u276E ",
            "postfix": "\u276F",
            "fetch_stash_count": true,
            "fetch_status": true,
            "template": "{{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> \uF046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }}"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#43CCEA",
          "background": "transparent",
          "properties": {
            "postfix": " ",
            "prefix": "  "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#43CCEA",
          "background": "transparent",
          "properties": {
            "time_format": "15:04:05",
            "prefix": "<transparent> \uE0BA\uE0BC </>"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#910000",
          "properties": {
            "prefix": "<transparent> \uF12A</> "
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "prefix": " ÔÅ°",
            "always_enabled": true,
            "error_color": "#ff0000",
            "display_exit_code": false
          }
        }
      ]
    }
  ]
}